personnal_projects.astro---
import { getCollection } from 'astro:content';

import BaseLayout from '../../layouts/BaseLayout.astro';

import ContactCTA from '../../components/ContactCTA.astro';
import PortfolioPreview from '../../components/PortfolioPreview.astro';
import Hero from '../../components/Hero.astro';
import Grid from '../../components/Grid.astro';

const developpementPersosCollection = (await getCollection('developpementPersosCollection')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
	title="Projets Personnels | Alexis BONIFACE"
	description="Projets personnels d'Alexis BONIFACE"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Projets Personnels"
				tagline="Découvrez les projets personnels que j'ai pu réaliser."
				align="start"
			/>
			<Grid variant="offset">
				{
					developpementPersosCollection.map((project) => (
						<li>
							<PortfolioPreview developpementPersos={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
